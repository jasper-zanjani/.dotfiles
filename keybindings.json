[
  {
    "key": "alt+delete",
    "command": "editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+h",
    "command": "-editor.action.startFindReplaceAction"
  },

// Python
  {
    "key": "ctrl+alt+win+p",
    "command": "python.execInTerminal"
  },
  {
    "key": "ctrl+alt+cmd+p",
    "command": "python.execInTerminal"
  },

// Moving focus between panes (Windows)
  {
    "key": "ctrl+win+h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "ctrl+win+j",
    "command": "workbench.action.focusBelowGroup"
  },
  {
    "key": "ctrl+win+k",
    "command": "workbench.action.focusAboveGroup"
  },
  {
    "key": "ctrl+win+l",
    "command": "workbench.action.focusRightGroup"
  },

// Moving focus between panes (OS X)
  {
    "key": "ctrl+cmd+h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "ctrl+cmd+j",
    "command": "workbench.action.focusBelowGroup"
  },
  {
    "key": "ctrl+cmd+k",
    "command": "workbench.action.focusAboveGroup"
  },
  {
    "key": "ctrl+cmd+l",
    "command": "workbench.action.focusRightGroup"
  },

// Moving editors into different panes (Windows)
  {
    "key": "ctrl+shift+win+h",
    "command": "workbench.action.moveActiveEditorGroupLeft"
  },
  {
    "key": "ctrl+shift+win+j",
    "command": "workbench.action.moveActiveEditorGroupDown"
  },
  {
    "key": "ctrl+shift+win+k",
    "command": "workbench.action.moveActiveEditorGroupUp"
  },
  {
    "key": "ctrl+shift+win+l",
    "command": "workbench.action.moveActiveEditorGroupRight"
  },

// Zen mode
  {
    "key": "ctrl+win+z",
    "command": "workbench.action.toggleZenMode"
  },
  {
    "key": "ctrl+cmd+z",
    "command": "workbench.action.toggleZenMode"
  },

// Markdown
  {
    "key": "alt+b",
    "command": "markdown.extension.editing.toggleBold",
    "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
  },
  {
    "key": "alt+i",
    "command": "markdown.extension.editing.toggleItalic",
    "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
  },

// Status bar
  {
    "key": "ctrl+alt+b",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.openGlobalKeybindings"
  },
  {
    "key": "ctrl+cmd+b",
    "command": "workbench.action.toggleSideBarVisibility"
  },
  {
    "key": "ctrl+win+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.openGlobalKeybindings"
  },

// Integrated terminal
  {
    "key": "f12",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "ctrl+f11",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "ctrl+f12",
    "command": "workbench.action.togglePanelPosition"
  },

// Shell Launcher
  {
    "key": "ctrl+cmd+f12",
    "command": "shellLauncher.launch"
  },
  {
    "key": "ctrl+win+f12",
    "command": "shellLauncher.launch"
  },
  {
    "key": "f11",
    "command": "-extension.node-debug.startWithStopOnEntry",
    "when": "!inDebugMode && debugConfigurationType == 'node'"
  },
  {
    "key": "f11",
    "command": "-workbench.action.debug.stepInto",
    "when": "inDebugMode"
  },

// Side bar and activity bar
  {
    "key": "ctrl+shift+e",
    "command": "workbench.view.explorer"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer"
  },
  {
    "key": "ctrl+cmd+f",
    "command": "-workbench.action.toggleFullScreen"
  },
  {
    "key": "ctrl+cmd+right",
    "command": "-workbench.action.moveEditorToNextGroup"
  },
  {
    "key": "ctrl+cmd+left",
    "command": "-workbench.action.moveEditorToPreviousGroup"
  },

// Git
  {
    "key": "ctrl+cmd+g a",
    "command": "git.stageAll"
  },
  {
    "key": "ctrl+cmd+g c",
    "command": "git.commitStaged"
  },
  {
    "key": "ctrl+cmd+g p",
    "command": "git.push"
  },
  {
    "key": "ctrl+cmd+g shift+p",
    "command": "git.pull"
  },
  {
    "key": "ctrl+cmd+g s",
    "command": "git.sync"
  },
]